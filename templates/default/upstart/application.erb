start on <%= @start_on %>
stop on <%= @stop_on %>
<% if @respawn %>
respawn
<% if @respawn_limit %>
respawn limit <%= @respawn_limit %>
<% end %>
<% end %>

<% @environment.each do |k,v| %>
env <%= k.upcase %>='<%= v.gsub(/'/, "'\"'\"'") %>'
<% end %>

setuid <%= @user %>
chdir <%= @path %>

<% if @pre_start %>
pre-start exec <%= @pre_start %>
<% end %>

<% if @post_start %>
post-start exec <%= @post_start %>
<% end %>

exec <%= @command %>

<% if @pre_stop %>
pre-stop exec <%= @pre_stop %>
<% end %>

<% if @post_stop %>
post-stop exec <%= @post_stop %>
<% end %>
